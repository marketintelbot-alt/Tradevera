{
  "name": "@tradevera/worker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/index.ts --local",
    "deploy": "wrangler deploy",
    "build": "wrangler deploy --dry-run",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "echo 'No lint configured for worker package'",
    "migrate:local": "wrangler d1 migrations apply DB --local",
    "migrate:remote": "wrangler d1 migrations apply DB --remote",
    "seed:local": "wrangler d1 execute DB --local --file ./scripts/seed.sql",
    "seed:remote": "wrangler d1 execute DB --remote --file ./scripts/seed.sql"
  },
  "dependencies": {
    "@tradevera/shared": "workspace:*",
    "hono": "^4.7.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250224.0",
    "typescript": "^5.7.3",
    "wrangler": "^4.66.0"
  }
}
